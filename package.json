{
  "name": "koa-boilerplate",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "scripts": {
    "start": "npm run server",
    "server:inspect": "ts-node --inspect -F app/server",
    "server": "ts-node -F app/server",
    "server:w": "nodemon --no-colors -e ts,json --watch app --ignore *.spec.ts -x \"ts-node -F app/server\"",
    "server:ww": "npm run server:w -- --verbose",
    "mocha": "ts-node -F node_modules/mocha/bin/_mocha",
    "test": "npm run t && npm run eslint && npm run tschk",
    "t": "npm run mocha -- **/*.spec.ts",
    "test:w": "npm run mocha -- --watch --watch-extensions ts **/*.spec.ts",
    "tschk": "echo tsc --noEmit ... && tsc --noEmit",
    "tschk:w": "npm run tschk -- --watch",
    "up": "updtr --test-stdout --save-exact -R simple --test \"npm run test\"",
    "eslint": "eslint app/**"
  },
  "license": "Xnet",
  "dependencies": {
    "koa": "2.2.0",
    "koa-router": "7.1.1",
    "lodash": "4.17.4",
    "reflect-metadata": "0.1.10",
    "koa-bodyparser": "4.2.0",
    "typeorm": "0.0.11"
  },
  "devDependencies": {
    "@types/joi": "10.0.1",
    "@types/koa": "2.0.39",
    "@types/koa-router": "7.0.22",
    "@types/lodash": "4.14.62",
    "@types/mocha": "2.2.40",
    "@types/node": "7.0.12",
    "eslint": "3.19.0",
    "eslint-plugin-typescript": "0.1.0",
    "eslint-plugin-unicorn": "2.1.1",
    "joi": "10.4.1",
    "koa-response-time": "2.0.0",
    "mocha": "3.2.0",
    "nodemon": "1.11.0",
    "rimraf": "2.6.1",
    "sqlite3": "3.1.8",
    "ts-node": "3.0.2",
    "tslib": "1.6.0",
    "typescript": "2.2.2",
    "typescript-eslint-parser": "2.1.0"
  }
}
