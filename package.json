{
  "name": "koa-boilerplate",
  "private": true,
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "npm run server",
    "rmlib": "rimraf lib",
    "server": "ts-node server",
    "server:inspect": "ts-node --inspect server",
    "server:watch": "nodemon --no-colors -e ts,json --ignore lib --ignore *.spec.ts -x ts-node server",
    "ava": "ava -v -s lib/**/*.spec.js",
    "test": "npm run rmlib && npm run tsc:test && npm run ava",
    "tsc:test": "tsc --project test.tsconfig.json --outDir lib"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "koa": "2.2.0",
    "koa-router": "7.1.1",
    "reflect-metadata": "0.1.10"
  },
  "devDependencies": {
    "@types/koa": "2.0.39",
    "@types/koa-router": "7.0.22",
    "@types/node": "7.0.12",
    "ava": "0.18.2",
    "koa-handle-error": "0.0.5",
    "nodemon": "1.11.0",
    "rimraf": "2.6.1",
    "ts-node": "3.0.2",
    "tslib": "1.6.0",
    "typescript": "2.2.2"
  }
}
